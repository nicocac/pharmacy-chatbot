# Copy this file to .env.local and modify as needed for your local development

# Development server configuration
PORT=3000
FAST_REFRESH=true

# Backend API URL - change if your backend runs on a different port
REACT_APP_API_URL=http://localhost:3001

# Hot reload optimization (set to true if experiencing issues on Windows/Docker)
CHOKIDAR_USEPOLLING=false

# Source maps for better debugging
GENERATE_SOURCEMAP=true